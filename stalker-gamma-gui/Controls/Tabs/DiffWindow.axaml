<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:stalker_gamma.core.ViewModels.Tabs.GammaUpdatesTab;assembly=stalker-gamma.core"
        xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="stalker_gamma_gui.Controls.Tabs.DiffWindow"
        x:DataType="vm:GitDiffWindowVm"
        Title="{Binding FilePath}">
    <Design.DataContext>
        <vm:GitDiffWindowVm />
    </Design.DataContext>
    <Grid RowDefinitions="Auto,*">
        <Grid ColumnDefinitions="Auto">
            <CheckBox IsChecked="{Binding #DiffEdit.WordWrap}" Content="Word Wrap" />
        </Grid>
        <avaloniaEdit:TextEditor Grid.Row="1" x:Name="DiffEdit" IsReadOnly="True"
                                 HorizontalAlignment="Stretch" Background="#242424"
                                 VerticalScrollBarVisibility="Visible" FontSize="12" FontFamily="Consolas"
                                 SyntaxHighlighting="Diff" />
    </Grid>
</Window>