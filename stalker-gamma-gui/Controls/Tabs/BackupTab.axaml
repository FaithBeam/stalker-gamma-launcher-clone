<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:stalker_gamma.core.ViewModels.Tabs.BackupTab;assembly=stalker-gamma.core"
             xmlns:converters="clr-namespace:stalker_gamma_gui.Converters"
             xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="stalker_gamma_gui.Controls.Tabs.BackupTab"
             x:DataType="vm:BackupTabVm">
    <Design.DataContext>
        <vm:BackupTabVm />
    </Design.DataContext>
    <UserControl.Resources>
        <converters:DeleteModConverter x:Key="DeleteModConverter" />
    </UserControl.Resources>
    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="Auto,*">
        <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpan="2">
            <ComboBox ItemsSource="{Binding Compressors}" SelectedItem="{Binding SelectedCompressor}" />
            <ComboBox Grid.Column="1" ItemsSource="{Binding CompressionLevels}"
                      SelectedItem="{Binding SelectedCompressionLevel}" />
            <Label Grid.Column="2" Content="{Binding Estimates}" />
            <TextBlock Grid.Column="3">
                <RadioButton Content="Mods" IsChecked="{Binding ModsIsChecked}" GroupName="BackupType">
                    <ToolTip.Tip>
                        Backup just the Gamma/mods folder. This is probably what you want.
                    </ToolTip.Tip>
                </RadioButton>
                <RadioButton Content="Full" IsChecked="{Binding FullIsChecked}" GroupName="BackupType">
                    <ToolTip.Tip>
                        Backup the anomaly and gamma folders.
                    </ToolTip.Tip>
                </RadioButton>
            </TextBlock>
                <TextBox Grid.Column="4" Margin="5 0" Text="{Binding GammaFolder}" VerticalAlignment="Center" />
            <Button Grid.Column="5" Content="Browse" Command="{Binding ChangeGammaBackupDirectoryCmd}" />
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1" RowDefinitions="Auto,*">
            <Label Content="Console" />
            <avaloniaEdit:TextEditor Grid.Row="1" VerticalAlignment="Stretch" MaxWidth="500" Width="500"
                                     x:Name="BackupTxt" IsReadOnly="True"
                                     HorizontalScrollBarVisibility="Auto" Foreground="#85fb98" Background="#242424"
                                     VerticalScrollBarVisibility="Visible" FontSize="12" FontFamily="Consolas" />
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" RowDefinitions="Auto,*">
            <Label Content="Backups" />
            <ListBox Grid.Row="1" ItemsSource="{Binding ModBackups}"
                     SelectedItem="{Binding SelectedModBackup}" />
        </Grid>
        <Grid Grid.Column="0" Grid.Row="2" ColumnDefinitions="Auto,Auto,Auto,Auto">
            <Button Command="{Binding BackupCmd}" Content="Backup" />
            <Button Grid.Column="1" Command="{Binding CancelBackupCmd}" Content="Cancel" />
            <Button Grid.Column="2" Command="{Binding }" Content="Restore" />
            <Button Grid.Column="3" Command="{Binding DeleteBackupCmd}">
                <Button.Content>Delete</Button.Content>
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource DeleteModConverter}">
                        <Binding Path="ModsBackupPath" />
                        <Binding Path="SelectedModBackup" />
                    </MultiBinding>
                </Button.CommandParameter>
            </Button>
        </Grid>
    </Grid>
</UserControl>